@import url('//fonts.googleapis.com/css?family=Alegreya+Sans:100,300,400,500,700,800,900,100italic,300italic,400italic,500italic,900italic,700italic,800italic');

html, .container-fluid {
  font-family: 'Alegreya Sans', sans-serif;
  background: #010101;
  color: #FFFFFF;
}

a:link, a:visited, a:hover, a:focus, a:active {
  text-decoration: none !important;
  color: #FFFFFF;
  }

.header {
  margin-top: 50px;
  margin-left: 50px;
  position: absolute;
  align: right;
}

.header h1 {
  text-align: right;
  font-weight: 100;
}

.contact {
  float: right;
}
.g, .l, .t, , .c, .e {
  padding: 5px;
  float: left;
}

.content {
  font-family: 'Alegreya Sans', sans-serif;
  font-weight: 300;
  font-size: 1.25em;
  margin-left: 200px;
  margin-top: 125px;
  padding-left: 30px;
  float: left;
  width: 600px;
}

.ng:visited {
  background-color: transparent;
  color: #32CD32;
  text-decoration: none;
}
.ng:hover {
  // background-color: transparent;
  background-color: #32CD32;
  color: #010101;
  text-decoration: none;
}

.np:visited {
  background-color: transparent;
  color: #FF1CAE;
  text-decoration: none;
}

.np:hover {
  background-color: #FF1CAE;
  color: #010101;
  text-decoration: none;
}

.nr:visited {
  background-color: transparent;
  color: #FF2400;
  text-decoration: none;
}

.nr:hover {
  background-color: #FF2400;
  color: #010101;
  text-decoration: none;
}

.projects {
    padding-top: 10px;
}

.projects h3 {
  padding-top: 10px;
  margin: 0px;
}

.projects p {
  padding-bottom: 10px;
  margin: 0px;
}

